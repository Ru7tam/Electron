<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:backgroundTint="@android:color/transparent"
    android:background="@android:color/transparent"
    android:id="@+id/bottomSheetDialog"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="16dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:text="Выделить"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/unit"
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginBottom="11dp"
                        android:layout_width="wrap_content"
                        android:text="Объединить в этаж и подъезд"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/colorView"
                        android:layout_height="1dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/add_label"
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginBottom="11dp"
                        android:layout_width="wrap_content"
                        android:text="Добавить метку"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/colorView"
                        android:layout_height="1dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginBottom="11dp"
                        android:layout_width="wrap_content"
                        android:text="Изменить приоритет"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/colorView"
                        android:layout_height="1dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginBottom="11dp"
                        android:layout_width="wrap_content"
                        android:text="Показать на карте"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/colorView"
                        android:layout_height="1dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginBottom="11dp"
                        android:layout_width="wrap_content"
                        android:text="Установить сигнал"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/colorView"
                        android:layout_height="1dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginBottom="11dp"
                        android:layout_width="wrap_content"
                        android:text="Вставить"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/colorView"
                        android:layout_height="1dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginBottom="11dp"
                        android:layout_width="wrap_content"
                        android:text="Копировать"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/colorView"
                        android:layout_height="1dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginBottom="11dp"
                        android:layout_width="wrap_content"
                        android:text="Редактировать"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/colorView"
                        android:layout_height="1dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="wrap_content"
                        android:text="Настроить"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/cancel"
        style="@style/buttonSignIn"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отмена"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColor="@color/main_color"
        android:textSize="17sp"
        android:textStyle="bold"
        />
</LinearLayout>
