<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:label="@string/nameCompany"
        android:icon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.House_analysis"
        tools:targetApi="31">
        <activity
            android:name=".ui.profile.AboutAppActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.CompassActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.LanguageActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.MainAccountActivity"
            android:exported="false" />
        <activity
            android:name=".ui.additional.SuccessfullyRegisteredActivity"
            android:exported="false" />
        <activity
            android:name=".ui.register.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.password.NewPassword"
            android:exported="false" />
        <activity
            android:name=".ui.password.RestorePassSecond"
            android:exported="false" />
        <activity
            android:name=".ui.register.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".ui.password.RestorePass"
            android:exported="false" />
        <activity
            android:name=".ui.additional.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>